  "packageManager": "pnpm",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
