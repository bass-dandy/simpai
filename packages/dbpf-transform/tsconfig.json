{
	"compilerOptions": {
		"baseUrl": "./src",
		"typeRoots": ["./node_modules/@types", "./src/typings"],
		"moduleResolution": "node16",
		"declarationDir": "./dist/types",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"esModuleInterop": true
	},
	"watchOptions": {
		"excludeDirectories": ["node_modules", "dist"]
	},
	"include": ["src/**/*"]
}
